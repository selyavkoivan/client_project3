<Window x:Class="client.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="AdminMainPage" Height="700" Width="1200">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Resource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <TabControl>
        <TabItem>
            <TabItem.Header>
                <Label Content="Личный кабинет"
                       Name="Account"
                       MouseLeftButtonDown="Account_OnMouseLeftButtonDown"
                       HorizontalAlignment="Stretch" />
                <!-- MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown" -->
            </TabItem.Header>
            <Grid>
                <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1 0"
                        BorderBrush="gray" Width="900" Height="640">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300" />
                            <ColumnDefinition Width="600" />
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="300" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border VerticalAlignment="Center" HorizontalAlignment="Center" Width="250"
                                    Height="250" BorderBrush="Gray" BorderThickness="1" CornerRadius="125" />
                            <Canvas Grid.Row="1">
                                <StackPanel Width="300">
                                    <Border Padding="30 0">
                                        <TextBlock Text="Должность" />
                                    </Border>
                                    <TextBox Name="Position" />
                                    <Border Padding="30 0">
                                        <TextBlock Text="Логин" />
                                    </Border>
                                    <TextBox GotKeyboardFocus="Login_OnGotKeyboardFocus" Name="Login" />
                                    <Border Padding="30 0">
                                        <TextBlock Text="Имя" />
                                    </Border>
                                    <TextBox Name="Name" />
                                    <Border HorizontalAlignment="Center" VerticalAlignment="Top">
                                        <Button Click="ButtonBase_OnClick" Content="изменить" />
                                    </Border>
                                </StackPanel>
                            </Canvas>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <Label Content="Пользователи"
                       Name="Users"
                       MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown"
                       HorizontalAlignment="Stretch" />

            </TabItem.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border Padding="30">
                    <DataGrid AutoGenerateColumns="False"
                              Height="700"
                              HorizontalAlignment="Left"
                              Name="UGrid"
                              VerticalAlignment="Top"
                              Width="600"
                              HeadersVisibility="Column"
                              CanUserResizeColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Path=login}" Width="160" />
                            <DataGridTextColumn Header="Пароль" Binding="{Binding Path=password}" Width="160" />
                            <DataGridTextColumn Header="Имя" Binding="{Binding Path=name}" Width="160" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <Border Grid.Column="1" Padding="20">
                    <Button Content="12" />
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</Window>